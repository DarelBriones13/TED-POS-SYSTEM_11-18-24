  <!DOCTYPE html>
  <html lang="en">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <link
        href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css"
        rel="stylesheet"
      />
      <link rel="stylesheet" href="/css/user.css" />
      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
      <title>Dashboard</title>
    </head>
    <body>
      <%- include('partials/sidebar') %>

        <!-- MAIN -->
        <main>
          <div class="container">
            <div class="header">
              <h2>User List</h2>
              <button class="new-user-btn">+ New User</button>
            </div>
            
            <div class="table-controls">
              <div class="show-entries">
                <label for="entries">Show</label>
                <select id="entries" class="entries-select">
                  <option value="3">3</option>
                  <option value="5">5</option>
                  <option value="10">10</option>
                </select>
                <span>entries</span>
              </div>
              
              <div class="search-box">
                <label for="search">Search:</label>
                <input type="text" id="search" class="search-input" placeholder="Search users...">
              </div>
            </div>
            
            <table class="user-table">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Username</th>
                  <th>Type</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <!-- Dynamic rows will be appended here by AJAX -->
              </tbody>
              
            </table>
            
            <div class="pagination">
              <button class="pagination-btn">Previews</button>
              <input type="text" class="page-number" value="1">
              <button class="pagination-btn">Next</button>
            </div>
          </div>
        </main>      
        <!-- MAIN -->

      <!-- New User Popup -->
      <div id="newUserModal" class="modal">
        <div class="modal-content">
          <span class="close">&times;</span>
          <h3>New User</h3>
          <form id="newUserForm">
            <!-- Name Fields in a side-by-side layout -->
            <div class="name-fields">
              <div class="name-field">
                <label for="fname">First Name</label>
                <input type="text" id="fname" name="fname" required />
              </div>
              <div class="name-field">
                <label for="lname">Last Name</label>
                <input type="text" id="lname" name="lname" required />
              </div>
            </div>

            <label for="username">Username</label>
            <input type="text" id="username" name="username" required />

            <label for="password">Password</label>
            <input type="password" id="password" name="password" required />

            <label for="userType">User Type</label>
            <select id="userType" name="userType">
              <option value="Cashier">Cashier</option>
              <option value="Manager">Manager</option>
            </select>

            <div class="button-group">
              <button type="submit" class="save-btn">Save</button>
              <button type="button" class="cancel-btn">Cancel</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Edit User Popup -->
<div id="editUserModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h3>Edit User</h3>
    <form id="editUserForm">
      <input type="hidden" id="editUserId" name="id" />

      <!-- Name Fields in a side-by-side layout -->
      <div class="name-fields">
        <div class="name-field">
          <label for="editFname">First Name</label>
          <input type="text" id="editFname" name="fname" required />
        </div>
        <div class="name-field">
          <label for="editLname">Last Name</label>
          <input type="text" id="editLname" name="lname" required />
        </div>
      </div>

      <label for="editUsername">Username</label>
      <input type="text" id="editUsername" name="username" required />

      <label for="editPassword">Password</label>
      <input type="password" id="editPassword" name="password" />

      <label for="editUserType">User Type</label>
      <select id="editUserType" name="userType">
        <option value="Cashier">Cashier</option>
        <option value="Manager">Manager</option>
      </select>

      <div class="button-group">
        <button type="submit" class="save-btn">Update</button>
        <button type="button" class="cancel-btn">Cancel</button>
      </div>
    </form>
  </div>
</div>


      </section>
      <script src="/js/nav&side.js"></script>
      <script src="/js/user.js"></script>
      <script src="/js/userpopup.js"></script>
    </body>
  </html>
